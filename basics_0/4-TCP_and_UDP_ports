#!/usr/bin/env bash
# A bash script that displays listening ports.
if ! command -v ss &> /dev/null; then
    echo "The 'ss' command is required but not installed."
    exit 1
fi

# Display listening ports with PID and program name
ss -tuln -p | awk '/LISTEN/ {print $1, $5, $6, $7}' | awk -F':' '{print $1, $2, $3}'